                    // console.log('ws: ',chessApiMessage);
                    if ("winChance" in chessApiMessage) {
                        document.querySelector('.eval_bar').innerText = chessApiMessage['eval'].toFixed(1);
                        document.querySelector('.eval_bar').style.height = parseInt(100 - chessApiMessage['winChance']) + '%';
                    }
                };

                ws.onclose = (event) => {
                    console.log("ws WebSocket connection closed. Reconnecting...");
                    setTimeout(connectWS, 1000); // Reconnect after 1 second
                };

                ws.onerror = (error) => {
                    console.error("ws WebSocket error: ", error);
                    ws.close(); // Close on error to trigger reconnect
                };
            }

