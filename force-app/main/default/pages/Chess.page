                display: flex;
                justify-content: space-around;
                flex-direction: column;
            }

            .up{
                grid-area: up;
            }
            .down{
                grid-area: down;
            }
            .left{
                grid-area: left;
            }
            .right{
                grid-area: right;
            }

            .box{
                /* border: 2px solid black; */
